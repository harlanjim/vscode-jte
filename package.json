{
  "name": "jte-language-support",
  "displayName": "JTE Language Support",
  "description": "Language support for Java Template Engine (JTE)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "jte",
        "aliases": [
          "Java Template Engine",
          "jte"
        ],
        "extensions": [
          ".jte"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jte",
        "scopeName": "text.html.jte",
        "path": "./jte.tmLanguage.json",
        "embeddedLanguages": {
          "text.html": "html",
          "source.java": "java"
        }
      }
    ],
    "configuration": {
      "title": "JTE",
      "properties": {
        "jte.@.completions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "import",
            "param",
            "if",
            "else",
            "endif",
            "for",
            "endfor",
            "template",
            "raw"
          ],
          "description": "Custom completions for JTE directives"
        },
        "jte.common.jdk.classes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "java.util.Map",
            "java.util.List",
            "java.util.HashMap",
            "java.util.ArrayList",
            "java.util.Set",
            "java.util.HashSet",
            "java.time.LocalDate",
            "java.time.LocalDateTime"
          ],
          "description": "Common JDK classes to include in import suggestions"
        }, 
        "jte.java.types": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "String",
            "Integer",
            "Long",
            "Double",
            "Float",
            "Boolean",
            "Character",
            "Byte",
            "Short",
            "BigInteger",
            "BigDecimal"
          ],
          "description": "Java types to include in param suggestions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "xml2js": "^0.6.2"
  },
  "main": "./out/extension.js"
}
