{
    "comments": {
      "lineComment": "@//",
      "blockComment": [ "@/*", "*/" ]
    },
    "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"]
    ],
    "autoClosingPairs": [
      { "open": "{", "close": "}" },
      { "open": "[", "close": "]" },
      { "open": "(", "close": ")" },
      { "open": "'", "close": "'" },
      { "open": "\"", "close": "\"" },
      { "open": "@if", "close": " (" },
      { "open": "@for", "close": " (" }
    ]
  }